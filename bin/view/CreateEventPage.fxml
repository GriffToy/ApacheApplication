<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="325.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.CreateEventController">
   <children>
      <VBox prefHeight="325.0" prefWidth="450.0" spacing="10.0">
         <children>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Label text="Create an Event">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="93.0" minWidth="10.0" prefWidth="86.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="240.0" minWidth="10.0" prefWidth="234.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="137.0" minWidth="10.0" prefWidth="90.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Name of Event*:" />
                  <Label text="Event Date*:" GridPane.rowIndex="1" />
                  <Label text="Sponsor:" GridPane.rowIndex="3" />
                  <TextField fx:id="eventNameTextField" GridPane.columnIndex="1" />
                  <TextField fx:id="sponsorTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField fx:id="locationTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="Location*:" GridPane.rowIndex="2" />
                  <DatePicker fx:id="eventDateDatePicker" prefHeight="25.0" prefWidth="240.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Categories:" GridPane.rowIndex="4" />
                  <ListView fx:id="categoryListView" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Button fx:id="addCategoryButton" mnemonicParsing="false" onAction="#addCategoryButtonClicked" prefWidth="90.0" text="Add Category" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                  <Label text="Other Details:" GridPane.rowIndex="5" />
                  <Label fx:id="warningLabel" text=" " textFill="RED" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               </children>
            </GridPane>
            <TextArea fx:id="otherDetailsTextArea" prefHeight="116.0" prefWidth="200.0" />
            <HBox spacing="10.0">
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonClicked" prefWidth="90.0" text="Cancel" />
                  <Button fx:id="saveEventButton" defaultButton="true" mnemonicParsing="false" onAction="#saveEventButtonClicked" prefWidth="90.0" text="Save Event" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
